{
  "manifest_version": 3,
  "name": "DelugeFlow",
  "short_name": "DelugeFlow",
  "version": "0.76.0",
  "default_locale": "en",
  "description": "Send torrent links to your Deluge server.",
  "homepage_url": "https://github.com/d8ahazard/DelugeFlow/",
  "author": "d8ahazard/sbussetti",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "DelugeFlow",
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
	"default_popup": "popup.html"
  },
  "icons": {	
    "16": "images/icon-19.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png" 
  },
  "options_page": "options.html",
  "permissions": [
    "cookies",
    "contextMenus",
    "downloads",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "all_frames": true,
    "matches": ["<all_urls>"], 
    "js": [
      "lib/logger.js",
      "lib/utils.js", 
      "lib/controller_communicator.js", 
      "content_handler.js"
    ],
    "css": [
      "content_handler.css"
    ]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "images/*.gif",
        "lib/images/*.png",
        "options.css",
        "options.js",
        "lib/logger.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
