{
  "name": "DelugeFlow",
  "version": "0.90.0",
  "description": "Chrome extension for sending torrent links to Deluge servers",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d8ahazard/DelugeFlow.git"
