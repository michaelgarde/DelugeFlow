    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "gulp": "^5.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-copy": "^5.0.0",
    "gulp-notify": "^5.0.0",
